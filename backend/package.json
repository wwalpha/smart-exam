{
  "name": "smart-exam-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:lambda": "node scripts/build-lambda.mjs",
    "package:lambda": "node scripts/package-lambda.mjs",
    "dev": "nodemon --watch src --ext ts,tsx --exec \"tsx src/local.ts\"",
    "start:local": "tsx src/local.ts",
    "test": "vitest run",
    "test:integration": "DDB_LOCAL_INTEGRATION=1 vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@alphax/dynamodb": "^1.2.16",
    "@aws-sdk/client-bedrock-runtime": "^3.956.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.956.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.956.0",
    "@pdf-lib/fontkit": "^1.1.1",
    "@smart-exam/api-types": "workspace:*",
    "@vendia/serverless-express": "^4.12.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "p-limit": "^7.3.0",
    "pdf-lib": "^1.17.1",
    "pdf-to-png-converter": "^3.11.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.39.2",
    "@types/aws-lambda": "^8.10.158",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.0.0",
    "@vercel/nft": "^0.29.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "globals": "^17.0.0",
    "nodemon": "^3.1.11",
    "testcontainers": "^10.15.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.0.0"
  }
}
